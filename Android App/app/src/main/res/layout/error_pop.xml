<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/halogen"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:text="ERROR"
        />


<androidx.cardview.widget.CardView
    android:id="@+id/sv"
    android:layout_below="@id/t2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="4dp"
    android:focusable="true">




        <TextView
            android:id="@+id/policy"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cav"
            android:text="It seems like an error connecting to the Bluetooth Module!!\nMake sure the MAC address is correct and you have manually connected to the Bluetooth Module."
            />


</androidx.cardview.widget.CardView>

    <LinearLayout android:gravity="center"
        android:layout_below="@id/sv"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:padding="10dp"
        >

        <Button android:id="@+id/ok"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_btn2"
            android:textColor="#fff"
            android:clickable="true"
            android:text="EXIT APP"
            android:foreground="?android:attr/selectableItemBackground"
            android:theme="@style/pro" />
    </LinearLayout>




</RelativeLayout>